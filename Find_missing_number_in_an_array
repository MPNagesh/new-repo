public class Program {
	public static void main(String[] args) {
		// Program 31 - Find missing number in an array
		int arr[]= {1, 4, 5, 3, 7, 8, 6};
		int n =8;
		int sumOfElements=0; 
		int sumOfNumbers = (n*(n+1))/2;
		for(int i=0; i<arr.length; i++) {
			sumOfElements+=arr[i];
		}
		int num = sumOfNumbers-sumOfElements;
		System.out.println("The missing number in an array is : "+num);
	}
}
